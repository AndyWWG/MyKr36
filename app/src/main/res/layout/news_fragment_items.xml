<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="@dimen/news_items_height"
    android:gravity="center_vertical"
    >

    <ImageView
        android:id="@+id/news_items_logo"
        android:layout_width="@dimen/news_items_image_logo"
        android:layout_height="@dimen/news_items_image_logo"
        android:scaleType="fitXY"
        android:src="@mipmap/mine_icon_aboutlogo"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/news_items_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_marginTop="@dimen/category_item_type_height"
            android:layout_marginLeft="@dimen/category_item_margin"
            android:textSize="@dimen/category_item_text_size"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/news_items_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/category_item_type_height"
            android:layout_marginLeft="@dimen/category_item_margin"
            android:text="杨志芳"/>

        <TextView
            android:id="@+id/news_items_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/news_items_auther"
            android:layout_marginBottom="@dimen/category_item_type_height"
            android:layout_marginLeft="@dimen/category_item_margin"
            android:text="10分钟之前"/>

        <TextView
            android:id="@+id/news_items_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/category_item_type_height"
            android:layout_marginRight="@dimen/category_item_margin"
            android:textColor="@color/red"/>
    </RelativeLayout>

</LinearLayout>