<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/welcome_logo_bottom_margin"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <View
        android:id="@+id/category_item_type"
        android:layout_width="2dp"
        android:layout_height="@dimen/welcome_logo_bottom_margin"
        android:layout_marginLeft="@dimen/welcome_logo_bottom_margin"
        android:background="@color/colorAccent"></View>

    <TextView
        android:id="@+id/category_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/welcome_logo_bottom_margin"
        android:text="@string/app_name"
        android:textSize="@dimen/category_item_text_size" />
</LinearLayout>

