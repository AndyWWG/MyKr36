<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
        android:id="@+id/img_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/mine_icon_aboutlogo"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/tv_msg_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_size_5"
        android:text="@string/empty_msg"
        android:textColor="@color/color_tab_title"
        android:textSize="@dimen/category_item_text_size" />

</LinearLayout>
